{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block content %}
    <h1>Liste des utilisateur</h1>
    <div class='container-table'>
        <table class="table">
            <thead>
                <tr class='table-head'>
                    <th class= "column1">Id</th>
                    <th class= "column2">Nom</th>
                    <th class= "column2">Role</th>
                    <th class= "column2">Email</th>


                    <th class= "column3"></th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td class= "column1">{{ user.id }}</td>
                        <td class= "column2">{{ user.username }}</td>
                        <td class= "column2">{{ user.role }}</td>
                        <td class= "column2">{{ user.email }}</td>


                        <td class= "column3">
                            <a href="{{ path('backend_user_show', {'id': user.id}) }}">Voir</a>
                            <a href="">Editer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a >Cr√©er un user</a>
{% endblock %}
